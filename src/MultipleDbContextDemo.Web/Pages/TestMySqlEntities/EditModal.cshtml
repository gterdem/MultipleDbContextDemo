@page
@using Microsoft.AspNetCore.Mvc.Localization
@using MultipleDbContextDemo.Localization
@using MultipleDbContextDemo.Web.Pages.MySql.TestMySqlEntities
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using MultipleDbContextDemo.MySql.TestMySqlEntities;
@using System.Globalization
@inject IHtmlLocalizer<MultipleDbContextDemoResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/TestMySqlEntities/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="TestMySqlEntity.Name"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>